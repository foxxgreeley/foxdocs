---
import type { Props } from '@astrojs/starlight/props';
import { Icon } from 'astro-icon';
const { dir, locale, pagination } = Astro.props;
const { prev, next } = pagination;
const isRtl = dir === 'rtl';
---

<div class="flex justify-between" dir={dir}>
  <div class="">
    {
      prev && (
        <a href={prev.href} rel="prev">
          <span class="hover:underline flex gap-2">
            <Icon class="w-6" pack="lucide" name="chevron-left" />
            <span class="link-title text-white text-base hover:underline">{prev.label}</span>
          </span>
        </a>
      )
    }
  </div>
  {
    next && (
      <a href={next.href} rel="next">
        <span class="hover:underline flex gap-2">
          <span class="link-title text-white text-base">{next.label}</span>
          <Icon class="w-6" pack="lucide" name="chevron-right" />
        </span>
      </a>
    )
  }
</div>

<style>
  .link-title,
  a {
    color: var(--color-text);
    text-decoration: none;
  }
</style>
